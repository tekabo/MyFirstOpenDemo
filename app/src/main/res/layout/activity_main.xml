<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/test_dialog_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="测弹框" />

            <Button
                android:id="@+id/test_merge_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测mergeAdapter" />

            <Button
                android:id="@+id/test_lifecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测life周期" />

            <Button
                android:id="@+id/test_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测打电话权限" />

            <Button
                android:id="@+id/refresh_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="上拉刷新下拉加载" />

            <Button
                android:id="@+id/test_okhttp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测okhttp" />

            <Button
                android:id="@+id/test_retrofit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测retrofit" />

            <Button
                android:id="@+id/test_litepal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测litepal" />

            <Button
                android:id="@+id/test_greendao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测greendao" />

            <Button
                android:id="@+id/test_Dagger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测试Dagger" />

            <Button
                android:id="@+id/test_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="tab-up滑动" />
            <Button
                android:id="@+id/test_title_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="标题滑动" />

            <Button
                android:id="@+id/test_search_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="搜索框滑动" />

            <Button
                android:id="@+id/test_xutils"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测试xUtils" />

            <Button
                android:id="@+id/test_rxjava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="测试rxjava-开始订阅" />

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试文本"
                android:textSize="30sp" />

            <Button
                android:id="@+id/tv_glide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试glide"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_handler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试handler发消息"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_handler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收handler发的消息"
                android:textSize="30sp" />
            <!--测试AsyncTask-->
            <ProgressBar
                android:id="@+id/pb_test_AsyncTask"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:max="100"
                android:progress="0" />

            <Button
                android:id="@+id/btn_test_AsyncTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AsyncTask启动进度条" />

            <TextView
                android:id="@+id/tv_test_AsyncTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="AsyncTask进度值"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_test_eventbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试eventbus" />
            <Button
                android:id="@+id/btn_pie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饼图" />
            <Button
                android:id="@+id/btn_canvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线点矩形等"/>
            <Button
                android:id="@+id/btn_opera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移缩转切"/>
            <Button
                android:id="@+id/btn_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图标库"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>