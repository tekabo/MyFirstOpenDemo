<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_square"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/blue_circle"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_round_blue"/>
        <TextView
            android:id="@+id/tv_value0"
            android:layout_toRightOf="@+id/blue_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="event"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/green_circle"
            android:layout_below="@+id/blue_circle"
            android:layout_marginTop="10dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_round_green"/>
        <TextView
            android:id="@+id/tv_value1"
            android:layout_toRightOf="@+id/blue_circle"
            android:layout_below="@+id/blue_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="ttt"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>



</LinearLayout>